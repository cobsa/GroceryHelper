<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/row_basket_contents_ingredient_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="9dp"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/horizontal_80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="307dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintGuide_percent="0.7994792" />

    <CheckBox
        android:id="@+id/row_basket_contents_ingredient_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/horizontal_80"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/row_basket_contents_ingredient_amount"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/row_basket_contents_ingredient_amount" />

    <TextView
        android:id="@+id/row_basket_contents_ingredient_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1"
        app:layout_constraintRight_toLeftOf="@+id/horizontal_80"
        android:layout_marginRight="7dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/row_basket_contents_ingredient_name"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/row_basket_contents_ingredient_name"
        app:layout_constraintVertical_bias="0.5" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row_basket_contents_ingredient_name"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>